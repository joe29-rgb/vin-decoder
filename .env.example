# DO NOT PUT REAL SECRETS HERE. Copy to .env and fill values locally.
NODE_ENV=development
PORT=10000
LOG_LEVEL=info

# GoHighLevel OAuth
GHL_CLIENT_ID=your_ghl_client_id
GHL_CLIENT_SECRET=your_ghl_client_secret
GHL_REDIRECT_URI=https://your-domain.com/api/ghl/oauth/callback
GHL_WEBHOOK_SECRET=replace_with_random_string

# GoHighLevel Legacy (optional)
GHL_API_KEY=your_ghl_api_key
GHL_BASE_URL=https://services.leadconnectorhq.com/v1
GHL_LOCATION_ID=your_location_id

# VIN Audit
VINAUDIT_API_KEY=your_vinaudit_api_key

# CARFAX
CARFAX_API_KEY=your_carfax_api_key

# Supabase (NO SERVICE ROLE KEY HERE)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_public_anon_key

# Optional tuning
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120
HTTP_TIMEOUT_MS=30000
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY_MS=500
